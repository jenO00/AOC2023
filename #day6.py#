def readFile():
    signal = ""
    with open('day6.txt') as file:
        for line in file:
            signal += line.rstrip() #add to it
    return signal


def decode():
    #signal = readFile()
    signal = "nppdvjthqldpwncqszvftbrmjlhg"
    #signal="mjqjpqmgbljsphdztnvjfqwrcgsmlb"
    currCount = 0
    totalCount = 0
    used = ""
    found = False
    count = 0
    while found != True:
        if found == True:
            print("Found it :) :", used)
        for i in signal:
           # count+=1
          #  print("Count :", count)
            totalCount+=1
            if i not in used:
                if currCount == 14:
                    found = True
                else:
                    used+=i
                    currCount += 1
            else:
                #nollställ värden
                if len(used) != 14:
                    print("used :", used, currCount, "i :", i)
                    used = ""
                    currCount=0
    return used, signal.index(used)+14-2
                    
        
